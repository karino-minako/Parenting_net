<div class="sidebar-heading h2">質問のタグ一覧</div>
<% tags.each do |tag| %>
  <%= link_to tag.name, questions_path(tag_name: tag.name) %>
<% end %>

<div class="sidebar-heading h2">質問ランキング<br>
（ <i class="fas fa-smile" aria-hidden="true" style="color: orange;"></i> 共感した順）</div>
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th></th>
			<th>名前</th>
			<th>タイトル</th>
		</tr>
	</thead>
	<tbody>
		<% question_empathy_ranks.each.with_index(1) do |question, i| %>
			<tr>
				<td><%= i %>位</td>
				<td>
					<%= link_to user_path(question.user_id) do %>
					<%= attachment_image_tag(question.user, :profile_image, :fill, 40, 40, fallback: "no-image1.jpg") %><br>
					<% end %>
					<%= link_to question.user.name, user_path(question.user_id) %>
				</td>
				<td>
					<%= link_to question.title, question_path(question) %>
				</td>
			</tr>
		<% end %>
  </tbody>
</table>