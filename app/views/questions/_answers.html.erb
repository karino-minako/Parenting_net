<% answers.each do |answer| %>
	<div>
		<div>
			<div>
				<%= link_to user_path(answer.user) do %>
				  <%= attachment_image_tag answer.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %>
				<% end %>
			</div>
			<div><%= answer.answer %></div>
		</div>
		<div>
			<div><%= answer.user.name %></div>
			<div class="answer_like_<%= answer.id %>">
        <%= render 'questions/like', answer: answer %>
      </div>
			<div><%= answer.created_at.strftime("%Y/%m/%d") %></div>
		</div>
		<div>
			<% if answer.user == current_user %>
			  <div><%= link_to "編集する", edit_question_answers_path(answer) %></div>
			  <div><%= link_to "削除する", question_answers_path(answer), method: :delete, remote: true, "data-confirm" => "本当に削除しますか？" %></div>
			<% end %>
		</div>
	</div>
<% end %>