<%= flash[:notice] %>
<div>
	<div>
		<div>
			<%= link_to user_path(question.user_id) do %>
        <%= attachment_image_tag(question.user, :profile_image, :fill, 50, 50, fallback: "no-image1.jpg") %>
			<% end %>
		</div>
		<div><%= link_to question.title, question_path(question) %></div>
  </div>
	<div>
		<div><%= link_to question.user.name, user_path(question.user_id) %></div>
		<div>回答数: <%= question.answers.count %></div>
		<div>
			<% if question.empathized_by?(current_user) %>
				<%= link_to question_empathies_path(question), method: :delete, remote: true do %>
				  <i class="fas fa-smile" aria-hidden="true" style="color: orange;"></i>
				  	    共感した  <%= question.empathies.count %>
				<% end %>
			<% else %>
				<%= link_to question_empathies_path(question), method: :post, remote: true do %>
				  <i class="far fa-smile" aria-hidden="true"></i>
				  	    共感した  <%= question.empathies.count %>
				<% end %>
			<% end %>
		</div>
		<div><%= question.created_at.strftime("%Y/%m/%d") %></div>
	</div>
	<div>
		  <%= render 'questions/tag', tag_list: question.tag_list %>
	  </div>
	<div>
		<% if question.user == current_user %>
			<div><%= link_to "編集する", edit_question_path(question) %></div>
			<div><%= link_to "削除する", question_path(question), method: :delete, "data-confirm" => "本当に削除しますか？" 	%></div>
		<% end %>
	</div>
</div>