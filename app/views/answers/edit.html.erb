<div class="container">
	<div class="row">
		<div class="col-md-9 col-sm-12">
			<h2>回答編集</h2>
			<%= render 'layouts/errors', obj: @answer %>
			<%= form_with(model: @answer, url: question_answers_path, method: :patch, local: true) do |f| %>
			  <%= f.text_area :answer, size: "90×5" %>
			  <div class="actions">
			    <%= f.submit '変更する' %>
			  </div>
			<% end %>
		</div>
	  <div class="col-md-3 col-sm-12">
			<%= render 'questions/sidebar', tags: @tags, question_empathy_ranks: @question_empathy_ranks %>
		</div>
	</div>
</div>