<div class="container">
	<div class="row">
		<div class="col-xs-12 col-md-8 col-md-offset-4 col-sm-8 col-sm-offset-4 col-lg-8 col-lg-offset-4">

			<div>
        <div><h4>会員詳細</h4><div>
        <% if @user == current_user %>
          <div><%= link_to "会員情報を編集する", edit_user_path(@user) %></div>
        <% end %>
      </div>
      <div>
        <div>
          <div>
				    <%= link_to user_path(@user) do %>
              <%= attachment_image_tag(@user, :profile_image, :fill, 50, 50, fallback: "no-image1.jpg") %>
			      <% end %>
			    </div>
			    <div><%= @user.name %></div>
        </div>
        <div>
        	<div><h4>自己紹介文</h4>
        </div>
        <div>フォロー数：<%= link_to @user.follower.count, user_follows_path(@user) %></div>
        <div>フォロワー数：<%= link_to @user.followed.count, user_followers_path(@user) %></div>
        <div>
          <!-- フォローボタン -->
          <% if current_user != @user %>
            <% if current_user.following?(@user) %>
              <%= link_to 'フォロー外す', user_relationships_path(@user.id), method: :delete, class: "btn btn-primary" %>
            <% else %>
              <%= link_to 'フォローする', user_relationships_path(@user.id), method: :POST, class: "btn btn-success" %>
            <% end %>
          <% end %>
        </div>
      </div>

      <h4>投稿一覧</h4>
      <%= render 'posts/index', posts: @posts %>

      <h4>質問一覧</h4>
      <%= render 'questions/index', questions: @questions %>
    </div>
  </div>
</div>