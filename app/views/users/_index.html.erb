<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>名前</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td>
          <%= link_to user_path(user) do %>
            <% if user.profile_image_id.nil? %>
              <%= image_tag('no-image1.jpg', style: "width: 40px; height: 40px;") %><br>
            <% else %>
              <%= image_tag image_url + user.profile_image_id.to_s, style: "width: 40px; height: 40px;" %><br>
            <% end %>
          <% end %>
          <%= link_to user.name, user_path(user) %>
        </td>
        <td>
          <!-- フォローボタン -->
          <% if current_user.id != user.id %>
            <% if current_user.following?(user) %>
              <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete, class: "btn btn-primary" %>
            <% else %>
              <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class: "btn btn-success" %>
            <% end %>
          <% end %>
        </td>
        <td>
          フォロー数：<%= user.follower.count %>
          <br>
          フォロワー数：<%= user.followed.count %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>