<% users.each do |user| %>
	<div>
		<div>
		  <div>
			  <%= link_to user_path(user) do %>
		      <%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image1.jpg") %>
				<% end %>
			</div>
			<div><%= user.name %></div>
			<div><%= link_to "詳しく見る", user_path(user) %></div>
		</div>
		<div>
		  <div>フォロー数：<%= user.follower.count %></div>
		  <div>フォロワー数：<%= user.followed.count %></div>
		  <div>
		    <!-- フォローボタン -->
				<% if current_user != user %>
					<% if current_user.following?(user) %>
						<%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete, class: "btn btn-primary" %>
					<% else %>
					  <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class: "btn btn-success" %>
					<% end %>
				<% end %>
		  </div>
		</div>
	<div>
<% end %>