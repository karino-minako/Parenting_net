<div class="container">
	<div class="row">
		<div class="col-xs-12 col-md-8 col-md-offset-4 col-sm-8 col-sm-offset-4 col-lg-8 col-lg-offset-4">
			<h2>投稿詳細</h2>
			<%= flash[:notice] %>
			<%= render 'layouts/errors', obj: @comment %>
			<div>
				<div>
					<div>
					  <%= link_to user_path(@post.user_id) do %>
              <%= attachment_image_tag(@post.user, :profile_image, :fill, 50, 50, fallback: "no-image1.jpg") %>
			  	  <% end %>
			    </div>
				  <div><%= link_to @post.title, post_path(@post) %></div>
        </div>
				<div>
					<div><%= link_to @post.user.name, user_path(@post.user_id) %></div>
					<div>
				  	<% if @post.post_liked_by?(current_user) %>
				  	  <%= link_to post_post_likes_path(@post, redirect_id: 0), method: :delete do %>
				  	    <i class="fas fa-thumbs-up" aria-hidden="true"></i>
				  	    <%= @post.post_likes.count %>  いいね
				  	  <% end %>
				  	<% else %>
				  	  <%= link_to post_post_likes_path(@post, redirect_id: 0), method: :post do %>
				  	    <i class="far fa-thumbs-up" aria-hidden="true"></i>
				  	    <%= @post.post_likes.count %>  いいね
				  	  <% end %>
				  	<% end %>
				  </div>
					<div>コメント数: <%= @post.comments.count %></div>
					<div><%= @post.created_at.strftime("%Y/%m/%d") %></div>
				</div>
				<div>
					<% if @post.user == current_user %>
					  <div><%= link_to "編集する", edit_post_path(@post) %></div>
					  <div><%= link_to "削除する", post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？" 	%></div>
					<% end %>
				</div>
			</div>
			<% if @post.image != nil %>
			  <%= attachment_image_tag(@post, :image, :fill, 100, 100) %>
			<% end %>
			<%= @post.body %>
			<% @comments.each do |comment| %>
			  <div>
			  	<div>
			      <div>
			      	<%= link_to user_path(comment.user) do %>
			      		<%= attachment_image_tag comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %>
			      	<% end %>
			      </div>
			      <div><%= comment.comment %></div>
			    </div>
			    <div>
			    	<div><%= link_to comment.user.name, user_path(comment.user) %></div>
			    	<div>
				  	  <% if comment.comment_liked_by?(current_user) %>
				  	    <%= link_to post_comments_comment_likes_path(comment.id, redirect_id: 0), method: :delete do %>
				  	      <i class="fas fa-thumbs-up" aria-hidden="true"></i>
				  	      <%= comment.comment_likes.count %>  いいね
				  	    <% end %>
				  	  <% else %>
				  	    <%= link_to destroy_comment_likes_path(comment.id, redirect_id: 0), method: :post do %>
				  	      <i class="far fa-thumbs-up" aria-hidden="true"></i>
				  	      <%= comment.comment_likes.count %>  いいね
				  	    <% end %>
				  	  <% end %>
				    </div>
					  <div>コメント数: <%= @post.comments.count %></div>
			    	<div><%= comment.created_at.strftime("%Y/%m/%d") %></div>
			    </div>
			    <div>
			    	<% if comment.user == current_user %>
			    	  <div><%= link_to "編集する", edit_post_comments_path(comment.id) %></div>
			    	  <div><%= link_to "削除する", post_comments_path(comment.id), method: :delete, "data-confirm" => "本当に削除しますか？" 	%></div>
			    	<% end %>
			    </div>
			  </div>
			<% end %>
			<%= form_for [@post, @comment] do |f| %>
			  <%= f.text_area :comment, size: "90×5" %>
			  <%= f.submit '送信' %>
			<% end %>
		</div>
	</div>
</div>

