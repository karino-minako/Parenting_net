<div class="container">
  <div class="row">
	  <div class="col-md-9 col-sm-12">
			<h2>投稿詳細</h2>
			<div class="post_<%= @post.id %>">
			  <%= render 'posts/show', post: @post %>
			</div>
			<% if @post.image != nil %>
			  <%= attachment_image_tag(@post, :image, :fill, 100, 100) %><br>
			<% end %>
			<br>
			<%= @post.body %>
			<br>
			<h3>コメント</h3>
			<%= link_to "コメントをいいね順に並べる", post_path(likes_order: @post.id) %>
	    <div class="comment_<%= @post.id %>">
	    	<%= render 'posts/comments', comments: @comments.order(created_at: :desc).page(params[:page]) %>
	    </div>
	    <div class="comment_errors">
			  <%= render 'layouts/errors', obj: @comment %>
			</div>
			<%= form_with model:[@post, @comment], data: {remote: true} do |f| %>
			  <%= f.text_area :comment, class: "form-control" %><br>
			  <%= f.submit '送信', class: 'btn btn-primary col-xs-12'%><br>
			<% end %>
		</div>
		<div class="col-md-3 col-sm-12">
			<%= render 'posts/sidebar', post_tags: @post_tags, post_like_ranks: @post_like_ranks %>
		</div>
	</div>
</div>

