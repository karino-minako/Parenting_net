<div class="sidebar-heading h2">投稿のタグ一覧</div>
<% post_tags.each do |tag| %>
  <span class="button"><%= link_to tag.name, posts_path(tag_name: tag.name), class: 'btn btn-success'%></span>
<% end %>

<div class="sidebar-heading h2">投稿<br>
  （ <i class="fas fa-thumbs-up" aria-hidden="true"></i> いいね順）</div>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>名前</th>
      <th>タイトル</th>
    </tr>
  </thead>
  <tbody>
    <% post_like_ranks.each do |post| %>
      <tr>
        <td>
          <i class="fas fa-thumbs-up" aria-hidden="true"></i>
          <%= post.post_likes.count %>
        </td>
        <td>
          <%= link_to user_path(post.user_id) do %>
            <% if post.user.profile_image_id.nil? %>
              <%= image_tag('no-image1.jpg', style: "width: 40px; height: 40px;") %><br>
            <% else %>
              <%= image_tag image_url + post.user.profile_image_id.to_s, style: "width: 40px; height: 40px;" %><br>
            <% end %>
          <% end %>
          <%= link_to post.user.name, user_path(post.user_id) %>
        </td>
        <td>
          <%= link_to post.title, post_path(post) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
