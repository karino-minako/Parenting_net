<h4>投稿のタグ一覧</h4>
<% post_tags.each do |tag| %>
  <%= link_to tag.name, posts_path(tag_name: tag.name) %>
<% end %>

<h4>投稿ランキング（ <i class="fas fa-thumbs-up" aria-hidden="true"></i> いいね順）</h4>
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th></th>
			<th>名前</th>
			<th>タイトル</th>
		</tr>
	</thead>
	<tbody>
		<% post_like_ranks.each.with_index(1) do |post, i| %>
			<tr>
				<td><%= i %>位</td>
				<td>
					<%= link_to user_path(post.user_id) do %>
					<%= attachment_image_tag(post.user, :profile_image, :fill, 40, 40, fallback: "no-image1.jpg") %><br>
					<% end %>
					<%= link_to post.user.name, user_path(post.user_id) %>
				</td>
				<td>
					<%= link_to post.title, post_path(post) %>
				</td>
			</tr>
		<% end %>
  </tbody>
</table>
