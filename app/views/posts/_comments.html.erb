<% comments.each do |comment| %>
	<div>
		<div>
			<div>
			  <%= link_to user_path(comment.user) do %>
			    <%= attachment_image_tag comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %>
			  <% end %>
			</div>
			<div><%= comment.comment %></div>
		</div>
		<div>
			<div><%= link_to comment.user.name, user_path(comment.user) %></div>
			<div class="comment_like_<%= comment.id %>">
        <%= render 'posts/like', comment: comment %>
      </div>
			<div><%= comment.created_at.strftime("%Y/%m/%d") %></div>
		</div>
		<div>
			<% if comment.user == current_user %>
			  <div><%= link_to "編集する", edit_post_comments_path(comment) %></div>
			  <div><%= link_to "削除する", post_comments_path(comment), method: :delete, remote: true, "data-confirm" => "本当に削除しますか？" %></div>
			<% end %>
		</div>
	</div>
<% end %>
