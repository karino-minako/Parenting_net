<td>
  <%= link_to user_path(post.user_id) do %>
    <% if post.user.profile_image_id.nil? %>
      <%= image_tag('no-image1.jpg', style: "width: 40px; height: 40px;") %><br>
    <% else %>
      <%= image_tag image_url + post.user.profile_image_id.to_s, style: "width: 40px; height: 40px;" %><br>
    <% end %>
  <% end %>
  <%= link_to post.user.name, user_path(post.user_id) %>
</td>
<td>
  <%= link_to post.title, post_path(post) %><br>
  <%= post.created_at.strftime("%Y/%m/%d") %>
</td>
<td>
  <% if post.post_liked_by?(current_user) %>
    <%= link_to post_post_likes_path(post), method: :delete, remote: true do %>
      <i class="fas fa-thumbs-up" aria-hidden="true"></i>
      <%= post.post_likes.count %><br>
    <% end %>
  <% else %>
    <%= link_to post_post_likes_path(post), method: :post, remote: true do %>
      <i class="far fa-thumbs-up" aria-hidden="true"></i>
      <%= post.post_likes.count %><br>
    <% end %>
  <% end %>
  <i class="far fa-comment" aria-hidden="true"></i> <%= post.comments.count %><br>
</td>
<td>
  <% post.tag_list.each do |tag| %>
    <%= link_to tag, posts_path(tag_name: tag), class: 'button btn btn-success' %>
  <% end %>
</td>