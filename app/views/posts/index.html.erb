<div class="container">
  <div class="row">
    <div class="col-md-9 col-sm-12">
      <p class="flash_message"><%= flash[:notice] %></p>
      <% if params[:tag_name].nil? %>
        <h2>投稿一覧</h2>
      <% else %>
        <h2>"<%= params[:tag_name] %>" タグのついた投稿一覧</h2>
      <% end %>
      <%= render 'posts/index', posts: @posts, image_url: @image_url %>
      <%= paginate @posts %>
    </div>

    <div class="col-md-3 col-sm-12">
      <%= render 'posts/sidebar', post_tags: @post_tags, post_like_ranks: @post_like_ranks, image_url: @image_url %>
    </div>
  </div>
</div>