<div class="container">
	<div class="row">
		<div class="col-xs-12 col-md-8 col-md-offset-4 col-sm-8 col-sm-offset-4 col-lg-8 col-lg-offset-4">
			<% if params[:tag_name].nil? %>
			    <span class="page_header">投稿一覧</span>
			<% else %>
			    <span class="page_header"><%= params[:tag_name] %>一覧</span>
			<% end %>
			<%= flash[:notice] %>
			<%= render 'posts/index', posts: @posts %>
			<%= link_to "投稿をいいね順に並べる", posts_likes_rank_path %>
			<%= link_to "投稿のタグ一覧を表示する", post_tags_path %>
			<%= paginate @posts %>
		</div>
	</div>
</div>

