<div class="container">
  <div Class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-4 col-sm-8 col-sm-offset-4 col-lg-8 col-lg-offset-4">

      <h4>会員の方はこちらからログイン</h4>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス, class: "col-xs-12 col-md-8 col-sm-8 col-lg-8" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-xs-12 col-md-8 col-sm-8 col-lg-8" %>
        </div>

        <div class="field">
          <%= f.label :パスワード, class: "col-xs-12 col-md-8 col-sm-8 col-lg-8" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "col-xs-12 col-md-8 col-sm-8 col-lg-8" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: "col-xs-12 col-md-8 col-sm-8 col-lg-8" %>
        </div>
      <% end %>
    </div>
    <div class="col-xs-12 col-md-8 col-md-offset-4 col-sm-8 col-sm-offset-4 col-lg-8 col-lg-offset-4">
      <h4>登録がお済みでない方</h4>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
