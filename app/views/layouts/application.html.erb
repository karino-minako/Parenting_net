<!DOCTYPE html>
<html>
  <head>
    <title>ParentingNet</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="navbar-wrapper">
        <div class="container-fluid">
          <nav class="navbar navbar-inverse navbar-static-top offset-3 pull right">
            <div class="container">
              <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
                <span class="header_logo"><%= link_to "子育てネット", root_path %></span>
              </div>
              <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                  <% if user_signed_in? %>
                    <li><%= link_to "マイページ", user_path(current_user) %></li>
                    <li><%= link_to "投稿一覧", posts_path %></li>
                    <li><%= link_to "質問一覧", questions_path %></li>
                    <li><%= link_to "会員一覧", users_path %></li>
                    <li><%= link_to "新規投稿", new_post_path %></li>
                    <li><%= link_to "新規質問", new_question_path %></li>
                    <li><%= link_to "アバウト", home_about_path %></li>
                    <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
                  <% else %>
                    <li><%= link_to "アバウト", home_about_path %></li>
                    <li><%= link_to "新規登録", new_user_registration_path %></li>
                    <li><%= link_to "ログイン", new_user_session_path %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </nav>
        </div>
      </div>
    </header>
    <% if user_signed_in? %>
      <div class="search-form" style="margin-top: 70px; text-align: center;">
        <%= form_tag(search_path, method: :get) do %>
          <%= text_field_tag 'search[content]' %>
          <%= select_tag 'search[model]', options_for_select({ "会員" => "user", "投稿" => "post", "質問" => "question"}) %>
          <%= submit_tag '検索' %>
        <% end %>
      </div>
    <% end %>

    <main>
      <%= yield %>
    </main>
  </body>
</html>
